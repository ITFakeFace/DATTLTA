<UserControl x:Class="TreeManagementApplication.UserControls.NodeUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TreeManagementApplication.UserControls"
             mc:Ignorable="d">
    <Canvas Name="Node" Width="75" Height="75">
        <Ellipse Name="NodeShape" Width="75" Height="75" Stroke="Black" StrokeThickness="2" Canvas.Top="0" Canvas.Left="0" Fill="White"/>
        <TextBlock Name="NodeValue" Text="None" Canvas.Top="37.5" Canvas.Left="37.5" FontSize="24">
            <TextBlock.RenderTransform>
                <TranslateTransform X="-28" Y="-16"/>
            </TextBlock.RenderTransform>
        </TextBlock>
    </Canvas>
</UserControl>
