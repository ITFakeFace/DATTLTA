<UserControl
    x:Class="TreeManagementApplication.UserControls.HalfNodeUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converter="clr-namespace:TreeManagementApplication.UserControls.Converter"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TreeManagementApplication.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="NodeMain"
    mc:Ignorable="d">
    <Canvas
        Name="NodeCanvas"
        Width="37.5"
        Height="75">
        <Border
            Name="NodeBorder"
            Background="White"
            BorderBrush="Black"
            BorderThickness="2"
            CornerRadius="0">
            <Rectangle
                Name="NodeShape"
                Canvas.Left="65"
                Canvas.Top="411"
                Width="37.5"
                Height="75"
                Stroke="Black"
                StrokeThickness="0" />
        </Border>
    </Canvas>
</UserControl>
