                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </TextBox.Resources>
                            </TextBox>
                            <TextBox x:Name="MaxGenField"
                                     Width="150"
                                     Height="55"
                                     Margin="10,0,20,0"
                                     Padding="15,0,15,0"
                                     BorderBrush="Black"
                                     BorderThickness="2"
                                     FontSize="32"
                                     GotFocus="MaxGenField_GotFocus"
