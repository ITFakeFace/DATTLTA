                                                            </Trigger>
                                                            <Trigger Property="IsFocused"
                                                                     Value="False">
                                                                <Setter TargetName="border"
                                                                        Property="BorderBrush"
                                                                        Value="Black" />
                                                                <Setter TargetName="border"
                                                                        Property="BorderThickness"
                                                                        Value="3" />
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </TextBox.Resources>
                                </TextBox>
                            </StackPanel>

