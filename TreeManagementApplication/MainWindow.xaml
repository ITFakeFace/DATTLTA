                                                                    Value="4" />
                                                        </DataTrigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </TextBox.Resources>
                            </TextBox>
                            <TextBox x:Name="MinGenField"
                                     Width="150"
                                     Height="55"
                                     Margin="10,0,20,0"
                                     Padding="15,0,15,0"
                                     BorderBrush="Black"
                                     BorderThickness="2"
                                     FontSize="32"
                                     GotFocus="MinGenField_GotFocus"
                                     LostFocus="MinGenField_LostFocus"
                                     Text="Min"
                                     TextAlignment="Center">
                                <TextBox.Resources>
