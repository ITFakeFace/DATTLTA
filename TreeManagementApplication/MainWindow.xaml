                                                            <Setter TargetName="border"
                                                                    Property="BorderBrush"
                                                                    Value="Black" />
                                                            <Setter TargetName="border"
                                                                    Property="BorderThickness"
                                                                    Value="2" />
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </Button.Resources>
                            </Button>
                            <TextBox x:Name="AmountGenField"
                                     Width="150"
                                     Height="55"
                                     Margin="100,0,20,0"
                                     Padding="15,0,15,0"
                                     Background="White"
                                     BorderBrush="Black"
                                     BorderThickness="2"
                                     FontSize="32"
                                     Foreground="Black"
