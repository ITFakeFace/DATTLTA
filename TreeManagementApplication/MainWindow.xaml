                                                            <Setter TargetName="border"
                                                                    Property="BorderBrush"
                                                                    Value="#00d2ff" />
                                                            <Setter TargetName="border"
                                                                    Property="BorderThickness"
                                                                    Value="4" />
                                                        </Trigger>
                                                        <Trigger Property="IsFocused"
                                                                 Value="False">
                                                            <Setter TargetName="border"
                                                                    Property="BorderBrush"
                                                                    Value="Black" />
                                                            <Setter TargetName="border"
                                                                    Property="BorderThickness"
                                                                    Value="2" />
                                                        </Trigger>
                                                        <DataTrigger Binding="{Binding ElementName=AmountGenField, Path=IsFocused}"
