            </Grid>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="200" />
                </Grid.ColumnDefinitions>
                <Border
                    x:Name="NodeContainerParent"
                    Grid.Column="1"
                    BorderBrush="Black"
                    BorderThickness="2"
                    ClipToBounds="True">
                    <Canvas
                        x:Name="canvas"
                        Canvas.Left="210"
                        Canvas.Top="140"
