<Window x:Class="TreeManagementApplication.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:UserControls="clr-namespace:TreeManagementApplication.UserControls"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:TreeManagementApplication"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="MainWindow"
        Width="1920"
        Height="1080"
        ResizeMode="NoResize"
        mc:Ignorable="d">
    <Canvas Width="1920"
            Height="1080">

        <Grid x:Name="Main"
              Canvas.Left="0"
              Canvas.Top="0"
              Width="1920"
              Height="1080"
              Panel.ZIndex="5"
              Background="White">
            <Grid.RowDefinitions>
                <RowDefinition Height="150" />
                <RowDefinition Height="*" />
                <RowDefinition Height="120" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid Panel.ZIndex="3">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="200" />
                </Grid.ColumnDefinitions>
                <!--  New NavBar  -->
                <Grid Grid.Row="0"
                      Grid.Column="1">
                    <StackPanel HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Orientation="Horizontal">
                        <UserControls:ToolBarItemUC x:Name="ModeCreate"
                                                    Mode="Create" />
                        <UserControls:ToolBarItemUC x:Name="ModeUpdate"
                                                    Mode="Update" />
                        <UserControls:ToolBarItemUC x:Name="ModeDelete"
                                                    Mode="Delete" />
                        <UserControls:ToolBarItemUC x:Name="ModeSearch"
                                                    Mode="Search" />
                        <UserControls:ToolBarItemUC x:Name="ModeTraverse"
                                                    Mode="Traverse" />
                        <UserControls:ToolBarItemUC x:Name="ModeMove"
                                                    Mode="Move" />
                        <UserControls:ToolBarItemUC x:Name="ModeSave"
                                                    Mode="Export" />
                        <UserControls:ToolBarItemUC x:Name="ModeImport"
                                                    Mode="Import" />
                        <UserControls:ToolBarItemUC x:Name="ModeChangeTree"
                                                    Mode="ChangeTreeType" />
                    </StackPanel>
                </Grid>
                <!--  End New Navbar  -->
            </Grid>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="200" />
                </Grid.ColumnDefinitions>
                <Border x:Name="NodeContainerParent"
                        Grid.Column="1"
                        BorderBrush="Black"
                        BorderThickness="2"
                        ClipToBounds="True">
                    <Canvas x:Name="canvas"
                            Canvas.Left="210"
                            Canvas.Top="140"
                            ClipToBounds="False">
                        <Canvas x:Name="NodeCanvas"
                                Canvas.Left="0"
                                Canvas.Top="0"
                                MouseLeftButtonDown="NodeCanvas_MouseDown" />
                    </Canvas>
                </Border>
            </Grid>

        </Grid>
        <Border x:Name="ToolBarMenu"
                Canvas.Left="250"
                Canvas.Top="130"
                Margin="10,0,10,0"
                Padding="2"
                Panel.ZIndex="10"
                Background="White"
                BorderBrush="Black"
                BorderThickness="2"
                ClipToBounds="False"
                CornerRadius="15"
                RenderTransformOrigin="0.844,0.439"
                Visibility="Visible">

            <Canvas x:Name="ToolBarMenuCanvas"
                    Width="1400"
                    Height="150">
                <!--  417.5 + 95x (x<6)  -->
                <Canvas x:Name="ToolBarCursor"
                        Canvas.Left="417.5">
                    <Line Stroke="Black"
                          StrokeThickness="2"
                          X1="0"
                          X2="40"
                          Y1="0"
                          Y2="-15" />
                    <Line Stroke="Black"
                          StrokeThickness="2"
                          X1="40"
                          X2="80"
                          Y1="-15"
                          Y2="0" />
                    <Line Stroke="White"
                          StrokeThickness="8"
                          X1="0"
                          X2="80"
                          Y1="0"
                          Y2="0" />
                </Canvas>
                <StackPanel x:Name="NavMenyPanel"
                            Canvas.Left="0"
                            Canvas.Top="15"
                            Orientation="Vertical">
                    <Canvas Width="1400"
                            Height="120">
                        <StackPanel x:Name="AddMenu"
                                    Canvas.Left="50"
                                    Canvas.Top="0"
                                    Width="1300"
                                    Height="120"
                                    VerticalAlignment="Center"
                                    LostFocus="AddMenu_LostFocus"
                                    Orientation="Horizontal"
                                    Visibility="Hidden">
                            <TextBox x:Name="AddField"
                                     Width="300"
                                     Height="55"
                                     Padding="20,0,20,0"
                                     Margin="-1,0,0,0"
                                     Background="White"
                                     BorderThickness="2"
                                     FontSize="32"
                                     Foreground="Black"
                                     GotFocus="AddField_GotFocus"
                                     GotKeyboardFocus="AddField_GotKeyboardFocus"
                                     KeyDown="AddField_KeyDown"
                                     LostFocus="AddField_LostFocus"
                                     Text="Insert">
                                <TextBox.Resources>
                                    <Style TargetType="{x:Type Border}">
                                        <Setter Property="CornerRadius"
                                                Value="10,0,0,10" />
                                    </Style>
                                    <Style TargetType="TextBox">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="{x:Type TextBox}">
                                                    <Border x:Name="border"
                                                            Background="{TemplateBinding Background}"
                                                            BorderBrush="{TemplateBinding BorderBrush}"
                                                            BorderThickness="{TemplateBinding BorderThickness}"
                                                            SnapsToDevicePixels="True">
                                                        <ScrollViewer x:Name="PART_ContentHost"
                                                                      Focusable="false"
                                                                      HorizontalScrollBarVisibility="Hidden"
                                                                      VerticalScrollBarVisibility="Hidden" />
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsEnabled"
                                                                 Value="false">
                                                            <Setter TargetName="border"
                                                                    Property="Opacity"
                                                                    Value="0.56" />
                                                        </Trigger>
                                                        <Trigger Property="IsFocused"
                                                                 Value="True">
                                                            <Setter TargetName="border"
                                                                    Property="BorderBrush"
                                                                    Value="#00d2ff" />
                                                            <Setter TargetName="border"
                                                                    Property="BorderThickness"
                                                                    Value="4" />
                                                        </Trigger>
                                                        <Trigger Property="IsFocused"
                                                                 Value="False">
                                                            <Setter TargetName="border"
                                                                    Property="BorderBrush"
                                                                    Value="Black" />
                                                            <Setter TargetName="border"
                                                                    Property="BorderThickness"
                                                                    Value="2" />
                                                        </Trigger>
                                                        <DataTrigger Binding="{Binding ElementName=BtnAdd, Path=IsFocused}"
                                                                     Value="True">
                                                            <Setter TargetName="border"
                                                                    Property="BorderBrush"
                                                                    Value="#00d2ff" />
                                                            <Setter TargetName="border"
                                                                    Property="BorderThickness"
                                                                    Value="4" />
                                                        </DataTrigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </TextBox.Resources>
                            </TextBox>
