                                    Width="150"
                                    Height="55"
                                    Margin="0,0,0,0"
                                    Background="White"
                                    BorderBrush="Black"
                                    BorderThickness="2"
                                    Click="BtnAdd_Click"
                                    Content="Add"
                                    FontSize="32"
                                    Foreground="Black"
                                    GotFocus="BtnAdd_GotFocus"
                                    LostFocus="BtnAdd_LostFocus">
