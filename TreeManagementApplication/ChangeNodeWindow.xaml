<Window x:Class="TreeManagementApplication.ChangeNodeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TreeManagementApplication"
        mc:Ignorable="d"
        Title="ChangeNodeWindow" Height="450" Width="800">
    <Grid>
        <Canvas x:Name="ChangeNodeMenu" >
            <TextBlock  TextWrapping="Wrap" Text="Value"  FontSize="36" Canvas.Left="35" Canvas.Top="169"/>
            <TextBox x:Name="InpChangeVal" GotFocus="InpChangeVal_GotFocus" KeyDown="InpChangeVal_KeyDown" TextWrapping="Wrap" Text="Value"  FontSize="36" InputScope="Number" Width="522" Canvas.Left="184" Canvas.Top="167"/>
            <Button x:Name="CancelBtn" Content="Cancel" Click="CancelBtn_Click" Width="66" Height="20" Canvas.Right="1" Canvas.Bottom="2" Canvas.Left="724" Canvas.Top="388" ></Button>
            <Button x:Name="OKBtn" Content="OK" Click="OKBtn_Click" Width="64" Height="20" Canvas.Right="55" Canvas.Bottom="2" Canvas.Left="632" Canvas.Top="388"></Button>
        </Canvas>
    </Grid>
</Window>
